{% extends 'ALKWebBundle::weblayout.html.twig' %}

{% block title %}{{ article.title }}{% endblock %}

{% block body %}
	<div class="hero-unit">
		{% include 'ALKWebBundle:MyArticles:onearticle.html.twig' %}
	</div>
	<p>
		<ul>
			<li>
				<form action="{{ path('article_delete', { 'id': article.id }) }}" method="post">
				{{ form_widget(delete_form) }}
				<button type="submit">{% trans %}Supprimer{% endtrans %}</button>
			</form>
			</li>
			<li>
				<a href="{{ path('alk_editarticle', { 'id': article.id }) }}">{% trans %}Modifier{% endtrans %}</a>
			</li>
		</ul>
	</p>

{% endblock %}