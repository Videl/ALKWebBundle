{% extends 'ALKWebBundle::weblayout.html.twig' %}


{% block more_stylesheets %}
<style>
.pull-center {
	text-align: center;
}
</style>
{% endblock %}


{% block body %}
<div class="container-fluid">
	<div class="row-fluid pull-center">
		{% for menu in menuTop %}
		<div class="span4">
			<h2>
				{% if menu.target == "alk_article" %}
				<a href="{{ path(menu.target, {'id': menu.targetid}) }}">
				{% else %}
				<a href="{{ path(menu.target, {'tag': menu.targetid}) }}">
				{% endif %}
					{{ menu.name }}
				</a>
			</h2>

			<p>{{ menu.description }}</p>
		</div>
		{% endfor %}
	</div>

	<div class="hero-unit">
        {% include 'ALKWebBundle:MyArticles:onearticle.html.twig' ignore missing with {'article': articleMenu} only %}
	</div>
</div>
{% endblock %}